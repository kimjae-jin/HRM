:root{
  --header-h: 56px;
  --sidebar-w: 220px;
}

html,body,#root{height:100%;}
body{margin:0;}
.layout{height:100%;}

/* 헤더 */
.app-header{
  position: fixed; top:0; left:0; right:0;
  height: var(--header-h);
  display:flex; align-items:center; padding:0 16px;
  background:#0f172a; border-bottom:1px solid rgba(255,255,255,.08);
  z-index: 1000;
}

/* 사이드바 */
.app-sidebar{
  position: fixed;
  top: var(--header-h);
  left: 0; bottom: 0;
  width: var(--sidebar-w);
  overflow-y: auto;
  background: #0b1021;
  border-right: 1px solid rgba(255,255,255,.08);
  padding: 12px 10px;
  z-index: 900;
}

/* 메인 콘텐츠 */
.app-main{
  position: relative;
  margin-top: var(--header-h);
  margin-left: var(--sidebar-w);
  min-height: calc(100% - var(--header-h));
  padding: 16px;
  background: #0e142a;
}

/* 상단 툴바 */
.page-toolbar{
  position: sticky; top: 0; z-index: 5;
  padding: 10px 12px; margin-bottom: 12px;
  background: rgba(14,20,42,.85); backdrop-filter: blur(6px);
  border-radius: 10px; border: 1px solid rgba(255,255,255,.06);
}

/* 사이드바 텍스트 톤다운 */
.sidebar-title{ display:block; margin:6px 8px 12px; color:#9aa7c0; font-weight:700; }
.sidebar-link{
  display:flex; align-items:center; gap:8px;
  padding:8px 10px; border-radius:8px; color:#cbd5e1; text-decoration:none;
}
.sidebar-link:hover{ background:#131a35; }
.sidebar-active{ background:#1a2448; color:#fff; }

/* 버튼/인풋 기본 톤 */
.btn{
  height:32px; padding:0 10px; border-radius:8px;
  border:1px solid rgba(255,255,255,.08);
  background:#1b2445; color:#e2e8f0; cursor:pointer;
}
.btn:hover{ background:#223062; }
.input{
  height:32px; padding:0 10px; border-radius:8px; outline:none;
  border:1px solid rgba(255,255,255,.08); background:#0b1021; color:#e2e8f0;
}

/* 헤더 내부 보조 */
.header-breadcrumb{ margin-left:12px; font-size:14px; color:#cbd5e1; }
.header-breadcrumb a{ color:#cbd5e1; text-decoration:none; }
.header-breadcrumb .sep{ opacity:.5; margin:0 6px; }
.header-right{ margin-left:auto; display:flex; align-items:center; gap:12px; color:#cbd5e1; font-size:13px; }
